extends /layouts/application.pug

block content
  +formFor(f, { url: urlFor('users'), method: 'post' })
    legend Sign Up
    +input(f, 'email', { labelName: 'Email' })
    +input(f, 'firstName', { labelName: 'First name' })
    +input(f, 'lastName', { labelName: 'Last name' })
    +input(f, 'password', { as: 'password', labelName: 'Password' })
    +button(f)
